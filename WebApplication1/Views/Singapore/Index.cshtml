
@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        .cont {
            position: relative;
            padding:50px;
        }

        .image {
            opacity: 1;
            display: block;
            max-width:250px;
            min-width:100%;
            transition: .5s ease;
            backface-visibility: hidden;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
        }

        .cont:hover .image {
            opacity: 0.3;
        }

        .cont:hover .middle {
            opacity: 1;
        }

        .text {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            padding: 16px 32px;
        }
    </style>
</head>

<div class="row">
    <div class="cont">
        <a href="@Url.Action("Approve","Singapore")">
            <img src="~/Pictures/Approved.png" alt="Avatar" class="image img-thumbnail">
            <div class="middle">
                <div class="text">Approve Work Orders</div>
            </div>
        </a>
    </div>
    <div class="cont">
