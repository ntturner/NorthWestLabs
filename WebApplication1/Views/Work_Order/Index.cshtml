@model IEnumerable<WebApplication1.Models.Work_Order>

@{
    ViewBag.Title = "Index";
}

<h2>Work Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.StatusDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuotedPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActualPrice)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.PhoneNumber)
            </td>
            @if (item.Approved==1)
            {
            <td>
                Approved
            </td>
            }
            else
            {
            <td>
                Not approved
            </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuotedPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualPrice)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>

<a href="@Url.Action("Index", "Seattle")" >Return to Home Page</a>