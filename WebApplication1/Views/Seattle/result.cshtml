@model WebApplication1.Models.Work_Order

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Work Order #@Model.OrderID</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.CustomerFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.CustomerLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Approved)
        </dt>

        @if (Model.Approved == 1)
        {
            <dd>
                Approved
            </dd>
        }
        else
        {
            <dd>
                Pending Approval
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Status.StatusDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.StatusDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QuotedPrice)
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.QuotedPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ActualPrice)
        </dt>
        @if (Model.ActualPrice == null)
        {
            <dd>
                @Html.DisplayFor(model => model.ActualPrice)
            </dd>
        }
        else
        {
            <dd>
                $@Html.DisplayFor(model => model.ActualPrice)
            </dd>
        }
        

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit","Work_Order",new { id = Model.OrderID })">Edit</a> |
    @Html.ActionLink("Back to Home Page", "Index")
</p>

