@model IEnumerable<WebApplication1.Models.Assay_Test>
@using WebApplication1.Models;
@{
    ViewBag.Title = "Quote";
    int counter = 1;
}

<h2>Quote</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="accordion">
    @foreach(Assay assay in ViewBag.Assays)
    {
    <div class="card">
        <div class="card-header" id="heading-@counter">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse-@counter" aria-expanded="true" aria-controls="collapse-@counter">
                    @assay.AssayName
                </button>
            </h5>
        </div>

        <div id="collapse-@counter" class="collapse show" aria-labelledby="heading-@counter" data-parent="">
            <div class="card-body">
                @{ 
                    //if(item in Model assayid = assay.assayid)
                }
            </div>
        </div>
    </div> 
    @counter++;
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Assay.AssayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Test.TestDescription)
        </th>
